{
	"liveServer.settings.port": 5502,
	"files.encoding": "utf8",
	"liveSassCompile.settings.formats": [
		{
			"format": "expanded",
			"extensionName": ".css",
			"savePath": "~/../css",
			"savePathSegmentKeys": ["scss"],
			"savePathReplaceSegmentsWith": "css"
		}
	],
	"liveSassCompile.settings.generateMap": true, // map 파일 생성
	"liveSassCompile.settings.forceBaseDirectory": "scss/", // 검색할 하위 디렉토리 설정
	"workbench.settings.useSplitJSON": true,
	"liveSassCompile.settings.watchOnLaunch": true, // 사스 컴파일 자동 실행
	// "liveSassCompile.settings.showOutputWindowOn": "Trace", // 출력창 오류 표시
}